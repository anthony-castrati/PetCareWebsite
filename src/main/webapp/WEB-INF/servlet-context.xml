<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Scans the classpath of this application for @Components to deploy as 
		beans -->
	<context:component-scan base-package="com.castrati.capcitypetcare" />

	<!-- Properties -->
	<context:property-placeholder order="0" ignore-resource-not-found="true" ignore-unresolvable="true" location="classpath:/application.properties" />
	<context:property-placeholder order="-1" ignore-resource-not-found="true" ignore-unresolvable="true" location="file:${overrideProps}" />
	
	<!-- Configures the @Controller programming model -->
	<mvc:annotation-driven />

	<!-- Forwards requests to the "/" resource to the "welcome" view -->
	<mvc:view-controller path="/" view-name="welcome" />

	<!-- Configures Handler Interceptors -->
	<mvc:interceptors>
		<!-- Changes the locale when a 'locale' request parameter is sent; e.g. 
			/?locale=de -->
		<bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor" />
	</mvc:interceptors>

	<!-- Handles HTTP GET requests for /resources/** by efficiently serving 
		up static resources in the ${webappRoot}/resources/ directory -->
	<mvc:resources mapping="/resources/**" location="/resources/" />
	<mvc:resources mapping="/img/**" location="/resources/img/" />
	<mvc:resources mapping="/js/**" location="/resources/js/" />
	<mvc:resources mapping="/css/**" location="/resources/css/" />
	<mvc:resources mapping="/fonts/**" location="/resources/fonts/" />
	<mvc:resources mapping="/robots.txt" location="/resources/robots.txt" />
	<mvc:resources mapping="/google22bcb22024c37a46.html"
		location="/resources/google22bcb22024c37a46.html" />



	<!-- Saves a locale change using a cookie -->
	<bean id="localeResolver"
		class="org.springframework.web.servlet.i18n.CookieLocaleResolver" />

	<!-- Form Validation Bean -->
	<bean id="validator"
		class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />

	<!-- Application Message Bundle -->
	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="/WEB-INF/messages" />
		<property name="cacheSeconds" value="0" />
	</bean>

	<!-- Resolves view names to protected .jsp resources within the /WEB-INF/views 
		directory -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="exposedContextBeanNames">
			<list>
				<value>appconfig</value>
				<value>nav</value>
				<value>carousel</value>
				<value>states</value>
				<value>gallery</value>
			</list>
		</property>
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<!-- Use this as an application-wide properties object -->
	<bean class="com.castrati.capcitypetcare.beans.ApplicationConfig"
		id="appconfig" scope="singleton">
		<property name="administratorEmail" value="anthonyvcastrati@gmail.com" />
		<property name="siteName" value="Capital City Pet Care" />
		<property name="url" value="http://google.com" />
		<property name="projectName" value="capcitypetcare" />
	</bean>
	
	<!-- Set these to add navigation items -->
	<bean class="com.castrati.capcitypetcare.beans.Navigation" id="nav"
		scope="singleton">
		<property name="navItems">
			<map>
                <entry key="home" value="Home" />
				<entry key="about" value="About Us" />
				<entry key="services" value="Services" />
                <entry key="promotions" value="Promotions" />
				<entry key="clients" value="Our Clients" />
				<entry key="contact" value="Contact Us" />
				<entry key="payments" value="Payments" />
			</map>
		</property>
	</bean>

	<!-- Carousel Images. Use key as the picture location and value as the caption -->
	<bean class="com.castrati.capcitypetcare.beans.Carousel" id="carousel"
		scope="singleton">
		<property name="scrollingImages">
			<map>
                <entry key="img/group_photo.jpg" value="Alexxis with many of our clients." />
				<entry key="img/MidgeEye.jpg" value="My Cat Midge aka Meeeeeeeedge!" />
                <entry key="img/alexxis_and_apollo.jpg" value="Alexxis and Apollo." />
                <entry key="img/penelope.jpg" value="Penelope the cat" />
				<entry key="img/KakarotHead.jpg" value="The Tailless Kakarot aka Goku" />
                <entry key="img/NoobNibb.jpg" value="Nooblet and Nibblet" />
				<entry key="img/PandaEyes.jpg" value="My Cat Pandora aka Panda Bear" />				
				<entry key="img/IcarusBanner.jpg" value="The Great Flying Icarus" />
				<entry key="img/GoogleBanner.jpg" value="Google the Chameleon" />
                <entry key="img/Yoshi.jpg" value="Yoshimoto" />
			</map>
		</property>
	</bean>

	<!-- State List -->
	<bean class="com.castrati.capcitypetcare.beans.States" id="states"
		scope="singleton">
		<property name="states">
			<map>
				<entry key="AL" value="Alabama" />
				<entry key="AK" value="Alaska" />
				<entry key="AZ" value="Arizona" />
				<entry key="AR" value="Arkansas" />
				<entry key="CA" value="California" />
				<entry key="CO" value="Colorado" />
				<entry key="CT" value="Connecticut" />
				<entry key="DE" value="Delaware" />
				<entry key="DC" value="District of Columbia" />
				<entry key="FL" value="Florida" />
				<entry key="GA" value="Georgia" />
				<entry key="HI" value="Hawaii" />
				<entry key="ID" value="Idaho" />
				<entry key="IL" value="Illinois" />
				<entry key="IN" value="Indiana" />
				<entry key="IA" value="Iowa" />
				<entry key="KS" value="Kansas" />
				<entry key="KY" value="Kentucky" />
				<entry key="LA" value="Louisiana" />
				<entry key="ME" value="Maine" />
				<entry key="MD" value="Maryland" />
				<entry key="MA" value="Massachusetts" />
				<entry key="MI" value="Michigan" />
				<entry key="MN" value="Minnesota" />
				<entry key="MS" value="Mississippi" />
